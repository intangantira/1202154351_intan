<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.intan_1202154351_modul1.MainActivity">

    <TextView
        android:id="@+id/text_makan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/makan_malam"
        android:textAlignment="center"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/tampil_tempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_makan"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_makan"
        android:layout_alignStart="@+id/text_makan"
        android:layout_below="@+id/tampil_tempat"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:text="Menu" />

    <TextView
        android:id="@+id/tampil_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_porsi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_menu"
        android:layout_alignStart="@+id/text_menu"
        android:layout_below="@+id/tampil_menu"
        android:layout_marginTop="27dp"
        android:text="Porsi"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tampil_porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_porsi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_harga"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_menu"
        android:layout_alignStart="@+id/text_menu"
        android:layout_below="@+id/tampil_porsi"
        android:layout_marginTop="22dp"
        android:text="Harga"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tampil_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_harga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
